<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slot Machine</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

    <div class="container">  //declaring global container
        <h1>Slot Machine</h1>
        <div class="reels-container">

            <div class="reels">  //indv reels
                <% reels.forEach(reel => { %>
                    <div class="reel"><%= reel %></div>
                <% }); %>
            </div>

            <div class="reels">
                <% reels.forEach(reel => { %>
                    <div class="reel"><%= reel %></div>
                <% }); %>
            </div>

            <div class="reels">
                <% reels.forEach(reel => { %>
                    <div class="reel"><%= reel %></div>
                <% }); %>
            </div>

        </div>
        <p class="result"><%= result.message %></p>  //results message
        <form action="/deposit" method="post">
            <label for="amount">Deposit Amount:</label>
            <input type="number" id="amount" name="amount" required>
            <button type="submit">Deposit</button>
        </form>

        <p class="curBal">Current Balance: <%= balance %></p>  //balance message 
        <a href="/">Spin Again</a>
    </div>
    
</body>
</html>
